<h1>New item</h1>

<%= form_for :item, url: items_path do |f| %>
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </p>

  <p>
    <%= f.label :estimate %><br>
    <%= f.text_field :estimate %>
  </p>

  <!-- TODO: Need to fix work estimate-->

  <p>
    <%= f.submit %>
  </p>
<% end %>
